{% extends 'client/base.html.twig'%}

{% block title  %}{% endblock %}   
{% block body %}
    
      <!--breadcrumbs area start-->
    <div class="breadcrumbs_area breadcrumbs_other">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb_content text-center">
                        <ul>
                            <li><a href="index.html">home</a></li>
                            <li><a href="#">pages</a></li>
                        </ul>
                        <h3>Wish List</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--breadcrumbs area end-->

     <!--shopping cart area start -->
    <div class="shopping_cart_area">
        <div class="container">

                <div class="cart_page_inner mb-60">
                    <div class="row">
                        <div class="col-12">
                            <div class="cart_page_tabel">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>product </th>
                                            <th>information</th>
                                            <th>Price</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% if wishList is not empty %}
                                                {% for item in wishList %}
                                                   
                                                        <tr class="border-top">
                                                            <td>
                                                                <div class="cart_product_thumb">
                                                                    {% set imageCamera = item.camera.imageCameras|first %}
                                                                    {% if imageCamera %}
                                                                        <a href="#"><img src="{{ minio_url(imageCamera.image) }}" alt=""></a>
                                                                    {% else %}
                                                                        <img src="" alt="oussama">
                                                                    {% endif %}
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="cart_product_text">
                                                                    <h4>{{item.camera.nom}}</h4>
                                                                    <ul>
                                                                        <li><i class="ion-ios-arrow-right"></i> Stockage : <span>{{item.camera.stockage}}</span></li>
                                                                        <li><i class="ion-ios-arrow-right"></i> Connectivte : <span>{{item.camera.connectivite == 1 ? 'true' : 'false'}}</span></li>
                                                                    </ul>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="cart_product_price">
                                                                    <span>${{item.camera.prix}}</span>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="cart_product_remove text-right">
                                                                    <a href="{{path('delete_favorit',{'id':item.id})}}"><i class="ion-android-close"></i></a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    
                                                {% endfor %}
                                                                                
                                            
                                        {% endif %}
                                    </tbody>
                                </table>
                                {% if wishList is empty  %}
                                    <div class="col-12">
                                        <div class="alert alert-warning" role="alert">
                                            No items in your wish list.
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="cart_page_button border-top d-flex justify-content-between">
                               
                                <div class="shopping_continue_btn">
                                    <a href="{{path('fetch')}}" class="btn btn-primary border">CONTINUE SHOPPING</a>
                                </div>
                            </div>
                         </div>
                     </div>
                 </div>
                 
        </div>
    </div>
     <!--shopping cart area end -->
    

{% endblock %}
  