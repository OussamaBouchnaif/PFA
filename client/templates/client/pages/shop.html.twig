                                                </select>
                                            </div>
                                            
                                        </div>
                                        <div class="panel-default">
                                            <div class="variants_size">
                                                <h2>Conectivite</h2>
                                            </div>
                                            
                                            <div class="panel_radio">
                                                <input id="" name="r" type="radio" data-target="createp_account" />
                                                <span class="checkmark"></span>
                                            </div>
                                            <label for="payment1" data-toggle="collapse" data-target="#panel1" >Yes</label>
                                            <div class="panel_radio">
                                                <input id="" name="r" type="radio" data-target="createp_account" />
                                                <span class="checkmark"></span>
                                            </div>
                                            <label for="payment1" data-toggle="collapse" data-target="#panel1" >Now</label>
                                            
                                        </div>
                                        <div class="modal_add_to_cart">
                                            <form action="#">
                                                <input min="1" max="100" step="2" value="1" type="number">
                                                <button type="submit">add to cart</button>
                                            </form>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}

