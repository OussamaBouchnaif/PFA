                                            <li><a href="{{path('camera_search',{categorie:cat.nom})}}"  data-turbo-frame="recherch" >{{cat.nom}} <span>68</span></a></li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                    <li class="widget_sub_"><a href="javascript:void(0)" data-toggle="collapse" data-target="#women">Reduction</a>
                                        <ul class="widget_dropdown_categories collapse " id="women">
                                            <li><a href=""> All <span>104</span></a></li>
                                            
                                            <li><a href="">10%<span>68</span></a></li>
                                            <li><a href="">20%<span>68</span></a></li>
                                            <li><a href="">30%<span>68</span></a></li>
                                            <li><a href="">40%<span>68</span></a></li>
                                            <li><a href="">50%<span>68</span></a></li>
                                            
                                        </ul>
                                    </li>
                                    
                                    
                                </ul>
                            </div>
                            <div class="widget_list widget_filter">
