function exportToCSV() {
    // Demander la confirmation de l'utilisateur
    var confirmation = confirm("Voulez-vous exporter les données au format CSV ?");
    
    // Vérifier si l'utilisateur a confirmé
    if (confirmation) {
        var table = document.getElementById('myTable');
        var rows = table.querySelectorAll('tbody tr'); // Sélectionnez uniquement les lignes dans le corps du tableau
        var csvData = [];

        // Ajoutez l'en-tête CSV
        var headerRow = ['Description', 'Pourcentage', 'Date de début', 'Date de fin'];
        csvData.push(headerRow.join(';'));

        // Parcourez chaque ligne du tableau
        for (var i = 0; i < rows.length; i++) {
            var row = rows[i];
            var rowData = [];
            var cols = row.querySelectorAll('td');

            // Parcourez chaque colonne de la ligne actuelle
            for (var j = 0; j < cols.length; j++) {
                rowData.push(cols[j].innerText);
            }

            // Ajoutez les données de la ligne au tableau CSV
            csvData.push(rowData.join(';'));
        }

        // Générez le contenu CSV
        var csvContent = csvData.join('\n');

        // Créez un objet Blob contenant le CSV
        var blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });

        // Créez un URL object pour le Blob
        var url = URL.createObjectURL(blob);

        // Créez un lien d'ancre pour le téléchargement
        var downloadLink = document.createElement('a');
        downloadLink.href = url;
        downloadLink.setAttribute('download', 'reductions.csv');

        // Ajoutez le lien au document
        document.body.appendChild(downloadLink);

        // Cliquez sur le lien pour démarrer le téléchargement
        downloadLink.click();

        // Supprimez le lien du document
        document.body.removeChild(downloadLink);
    }
}



   

