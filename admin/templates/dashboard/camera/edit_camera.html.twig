{% extends 'dashboard/base.html.twig' %}

{% block title %}Edit Camera Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Ajoutez vos liens vers les feuilles de style ici -->
    <style>
        /* Vos styles CSS personnalis√©s ici */
    </style>
{% endblock %}

{% block body %}
    <br>
    <h1 style="display: flex; align-items: center;">
        Edit Camera Details
    </h1>
 
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="main-content-label mg-b-5">Custom Style Invalid Messages</div>
                <p class="mg-b-20">It is Very Easy to Customize and it uses in your website application.</p>
                {{ form_start(form, {'attr': {'class': 'form', 'enctype': 'multipart/form-data'}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.nom) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.prix) }}
                                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.stock) }}
                                {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.dateAjout) }}
                                {{ form_widget(form.dateAjout, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.status) }}
                                {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.categorie) }}
                                {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.photos) }}
                                {{ form_widget(form.photos, {'attr': {'class': 'form-control-file', 'multiple': 'multiple'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                        <div class="row">{{ form_end(form) }}</div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}
